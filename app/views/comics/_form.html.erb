<%= form_for @comic, :html => { :class => "form-horizontal comic" } do |f| %>

    <% if @comic.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@comic.errors.count, "error") %> prohibited this comic from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @comic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
<div class="container">
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <%= error_span(@comic[:nombre]) %>
  </div>
  <div class="control-group">
    <%= f.label :Referencia_del_Comic, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :extension, :class => 'form-control' %>
    </div>
    <%= error_span(@comic[:extension]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            comics_path, :class => 'btn btn-default' %>
</div>
<% end %>
