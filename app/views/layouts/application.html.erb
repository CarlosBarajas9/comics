<!DOCTYPE html>
<html>
<head>
  <title>Comics</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<nav class="navbar navbar-default navbar-responsive">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <ul class="nav navbar-header navbar-nav">
    
    <li><%= link_to 'Inicio', root_path%></li>
    </ul>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      	<% if current_user %>
        <li><%= link_to 'Agregar Comics', comics_path%> </li>
        <% end %>
        
        <li><a href="#">Mi cuenta</a></li>
        </ul>
            <ul class="nav navbar-nav navbar-right">
      <form class="navbar-form navbar-left" role="search">
      
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Buscador" name="q" <% @q %>>
        </div>
        <button type="submit" class="btn btn-default">Buscar</button>
      </form>
      
      
 
        <li><a href="http://www.facebook.com">Facebook</a></li>
        
        <% if current_user %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true"><%= current_user.email%> <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Mi Cuenta</a></li>
            <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li>
            <li><%= link_to 'Cerrar Sesion', destroy_user_session_path, method: :delete, :class => 'navbar-link'%></li>
            <% else %>
   <li><%= link_to 'Iniciar Sesion', new_user_session_path, :class => 'navbar-link' %></li>   
   <li> <%= link_to 'Registrarse', new_user_registration_path, :class => 'navbar-link'  %></li>      
   
          <% end %>
          
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>

</body>
</html>
